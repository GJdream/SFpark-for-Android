<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:background="#FFFFFFFF" android:layout_height="fill_parent"
    >

 	<ScrollView android:layout_height="fill_parent" android:id="@+id/scrollView1"  android:layout_width="fill_parent">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:background="#FFFFFFFF" android:layout_height="fill_parent"
                      android:paddingLeft="10dp"
                      android:paddingTop="5dp"
                      android:paddingRight="10dp"
                      android:paddingBottom="5dp">

            <TextView
                android:text="GARAGE NAME"
                android:id="@+id/detailName"
                android:layout_below="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:textColor="@color/header_blue"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/header_blue"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@color/header_blue"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/blockColor"/>

                <TextView android:text="7 of 9 spaces free" android:id="@+id/usageText" android:layout_below="@+id/nameText"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:paddingLeft="5dp"
                          android:layout_weight="1"
                          android:textSize="16sp"
                          android:textIsSelectable="false">
               </TextView>
            </LinearLayout>

            <TextView android:text="This is the address and description of the garage (in brackets)" android:id="@+id/addressText" android:textColor="#000000"
                      android:layout_below="@+id/usageText" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textSize="16sp" android:padding="5dp"
                      android:visibility="gone"
                      android:layout_marginLeft="27dp">
            </TextView>

            <TextView android:text="Garage Phone Number" android:id="@+id/phoneText" android:layout_below="@+id/addressText" android:textColor="#000000" android:autoLink="all"
                      android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="16sp" android:padding="5dp" android:phoneNumber="true"
                      android:visibility="gone"
                      android:layout_marginLeft="27dp">
            </TextView>

            <LinearLayout android:layout_width="fill_parent" android:id="@+id/detailLinearLayout" android:layout_below="@+id/phoneText" android:layout_height="fill_parent"
                          android:layout_marginTop="5dp">
             </LinearLayout>

        </LinearLayout>
 	</ScrollView>
 	
 </LinearLayout>